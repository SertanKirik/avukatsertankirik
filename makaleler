  <script>
    // Filtreleme
    const q = document.getElementById('q');
    const posts = [...document.querySelectorAll('[data-post]')];
    const norm = s => s.toLocaleLowerCase('tr-TR');
    q.addEventListener('input', e=>{
      const needle = norm(e.target.value.trim());
      posts.forEach(p=>{
        const hit = needle==="" || norm(p.textContent).includes(needle);
        p.classList.toggle('hidden', !hit);
      });
    });

    // Ana sayfa linki (bulunduÄŸun pathâ€™e gÃ¶re)
    document.getElementById('back')?.addEventListener('click', function(e){
      e.preventDefault();
      const { origin, pathname } = window.location;
      const base = pathname.replace(/makaleler\.html$/i, '').replace(/\/?$/, '/');
      const url = origin + base + 'index.html';
      window.location.href = url;
    });
  </script>
